<?xml version="1.0" encoding="utf-8" ?>

<ThingDefs>

  <ThingDef Name="BaseMeleeWeapon" Abstract="True">
    <category>Item</category>
    <thingClass>ThingWithComps</thingClass>
    <equipmentType>Primary</equipmentType>
    <pathCost>10</pathCost>
    <useHitPoints>True</useHitPoints>
    <selectable>True</selectable>
    <graphicData>
      <onGroundRandomRotateAngle>35</onGroundRandomRotateAngle>
    </graphicData>
    <drawGUIOverlay>true</drawGUIOverlay>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
      <SellPriceFactor>0.5</SellPriceFactor>
    </statBases>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>True</alwaysHaulable>
    <tickerType>Never</tickerType>
    <techLevel>Midworld</techLevel>
    <weaponTags>
      <li>Melee</li>
    </weaponTags>
    <thingCategories>
      <li>WeaponsMelee</li>
    </thingCategories>
    <comps>
      <li>
        <compClass>CompForbiddable</compClass>
      </li>
      <li>
        <compClass>CompEquippable</compClass>
      </li>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li>
        <compClass>CompArt</compClass>
        <nameMaker>NamerMeleeWeapon</nameMaker>
        <descriptionMaker>ArtWeaponMelee</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Smith</soundWorking>
      <recipeUsers>
        <li>TableSmithing</li>
      </recipeUsers>
      <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
    </recipeMaker>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>



  <ThingDef Name="BaseMeleeWeapon_Sharp" ParentName="BaseMeleeWeapon" Abstract="True">
    <recipeMaker>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <exceptedThingDefs>
          <li>Silver</li>
          <li>Gold</li>
          <li>WoodLog</li>
        </exceptedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>

  <ThingDef Name="BaseMeleeWeapon_Blunt" ParentName="BaseMeleeWeapon" Abstract="True">
    <recipeMaker>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <exceptedThingDefs>
          <li>Silver</li>
          <li>Gold</li>
        </exceptedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
  </ThingDef>
  
  <!-- ============================================================== -->

  <ThingDef ParentName="BaseMeleeWeapon_Blunt">
    <defName>MeleeWeapon_Tazer</defName>
    <label>Tazer</label>
    <description>An up close and personal alternative to the StunGun.</description>
    <graphicData>
      <texPath>Things/Weapons/Tazer</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>75</costStuffCount>
    <soundInteract>InteractPistol</soundInteract>
    <techLevel>Spacer</techLevel>
    <weaponTags>
      <li>Spacer</li>
      <li>SpacerMelee</li>
    </weaponTags>
    <statBases>
      <WorkToMake>15000</WorkToMake>
      <MeleeWeapon_DamageAmount>1</MeleeWeapon_DamageAmount>
      <MeleeWeapon_Cooldown>4</MeleeWeapon_Cooldown>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <equippedAngleOffset>-65</equippedAngleOffset>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <meleeDamageDef>Electrocuted</meleeDamageDef>
      </li>
    </verbs>
  </ThingDef>

</ThingDefs>